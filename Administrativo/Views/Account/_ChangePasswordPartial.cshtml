@model Administrativo.Models.LocalPasswordModel


<div class="content">
    <div class="row">
        <div class="box box-warning">
            <div class="box-header">
                <h3 class="box-title">Editar</h3>
            </div>
            @using (Html.BeginForm("Manage", "Account"))
            {
                @Html.AntiForgeryToken()

                if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
                { 
                <div class="alert alert-success alert-dismissable">
    <i class="fa fa-check"></i>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <b>Sucesso!</b> @ViewBag.StatusMessage
</div>
                }

               

                <div class="box-body">
                    <div class="form-group">
                        <label>Senha</label>
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "text-box" })
                        @Html.ValidationMessageFor(m=>m.OldPassword)
                    </div>
                    <div>
                        <label>Nova senha</label>
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "text-box" })
                        @Html.ValidationMessageFor(m=>m.NewPassword)
                    </div><br />
                    <div>
                        <label>Confirmar nova senha</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-box" })
                        @Html.ValidationMessageFor(m=>m.ConfirmPassword)
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn bg-olive btn-block" style="width:150px;">Salvar</button>
                </div>
            }
        </div>
    </div>
</div>

