                            {
                                <figure style="background-image: url(@Utils.fullUrlImage("744x500", item.Id))" title="@Html.Raw(item.FotoCredito)" alt="@Html.Raw(item.FotoCredito)"></figure>
                            }
                        </article>
                    }
                </main>
            }





