            }

            @if (Model.ProximoJogo != null)
            {
                <div class="card-players" style="margin-bottom: 30px">
                    <div class="tabs" data-tab="cruzeiro" style="display: block">
                        <div class="content">
                            <h5>Próximo Jogo</h5>
