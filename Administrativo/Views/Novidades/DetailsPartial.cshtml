@model Administrativo.Models.MateriaNovidades
@{
    Layout = null;
}
<table class="table table-bordered table-striped responsive">
    <tbody>
        <tr>
            <td style="width:200px;">@Html.DisplayNameFor(model => model.id)</td>
            <td>@Html.DisplayFor(model => model.id)</td>
        </tr>

        <tr>
            <td>@Html.DisplayNameFor(model => model.Materia.titulo)</td>
            <td>@Html.DisplayFor(model => model.Materia.titulo)</td>
        </tr>

        <tr>
            <td>@Html.DisplayNameFor(model => model.status)</td>
            <td>@Html.DisplayFor(model => model.status)</td>
        </tr>

        <tr>
            <td>@Html.DisplayNameFor(model => model.dataPrograma)</td>
            <td>@Html.DisplayFor(model => model.dataPrograma)</td>
        </tr>

        <tr>
            <td>@Html.DisplayNameFor(model => model.novidades)</td>
            <td>@Html.DisplayFor(model => model.novidades)</td>
        </tr>

        <tr>
            <td>@Html.DisplayNameFor(model => model.audio)</td>
            <td>
                @if (!string.IsNullOrEmpty(Model.audio))
                {
                    @Html.Label("audio atual:")<b><i>&nbsp;@Model.audio</i></b>
                    <br />
                    <audio controls>

                        <source src="@Url.Content("~/Conteudo/materias/" + Model.idMateria + "/audios/" + Model.audio)" type="audio/mpeg">
                    </audio>
                }
        </td>
    </tr>

    <tr>
        <td>@Html.DisplayNameFor(model => model.dataCadastro)</td>
        <td>@Html.DisplayFor(model => model.dataCadastro)</td>
    </tr>
</tbody>
</table>