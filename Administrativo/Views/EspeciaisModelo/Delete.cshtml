@model Administrativo.Models.Noticias

@{
    ViewBag.Title = "Deletar - " + Model.titulo;
    ViewBag.Icon = "fa ";
    ViewBag.SmallDescription = "Deleta - " + Model.titulo;

}


<div class="box box-danger">
    <div class="box-header">
        <i class="fa fa-trash-o"></i>
        <h3 class="box-title">Deletar</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="callout callout-danger">
            <h4>Atenção</h4>
            <p>Deseja realmente deletar este registro?</p>
            @using (Html.BeginForm(new { editorial = ViewBag.EditorialChave }))
            {
                <button class="btn btn-danger">Sim</button>
                <a href="@Url.Action("Index", "EspeciaisModelo", new { EspecialId = Model.Editoriais.FirstOrDefault().id })" class="btn btn-success">Não</a>

            }

        </div>
        <div class="box-content padded">

        </div>
    </div>
</div>
