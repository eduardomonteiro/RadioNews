        <tr>
            <td>@Html.DisplayNameFor(model => model.texto)</td>
            <td>@Html.Raw(Model.texto)</td>
        </tr>

        <tr>
            <td>Periodicidade</td>
            <td>@(Model.periodo == 0 ? "Diariamente" : Model.periodo == 1 ? "Dia da Semana" : "Indeterminado" )</td>
        </tr>


        <tr style="text-transform:capitalize;">
            <td>@Html.DisplayNameFor(model => model.horario)</td>
            <td>
                @foreach (var horario in Model.Horario_programacao)
                {
                    if (horario.diaSemana.HasValue)
                    {
                        @Html.Raw(Html.DisplayWeekDayName((int)horario.diaSemana) + " - " + horario.horario)
                        <br />
                    }

                }
            </td>
        </tr>

        <tr>
            <td>Apresentadores</td>
            <td>
                @foreach (var apresentador in Model.Apresentadores.Where(x => x.participanteConvidado == false))
                {
                    <div class="col-md-3 col-sm-4">
                        <i class="fa fa-fw fa-user"></i>@apresentador.nome
                    </div>
                }

                @Html.Raw((Model.Apresentadores.Count() == 0 ? "<p class=\"text-yellow\">Nenhum apresentador selecionado.</p>" : ""))
            </td>
        </tr>


        <tr>
            <td>Participantes/Convidados</td>
            <td>
                @foreach (var apresentador in Model.Apresentadores.Where(x => x.participanteConvidado == true))
                {
                    <div class="col-md-3 col-sm-4">
                        <i class="fa fa-fw fa-user"></i>@apresentador.nome
                    </div>
                }

                @Html.Raw((Model.Apresentadores.Count() == 0 ? "<p class=\"text-yellow\">Nenhum participante ou convidado selecionado.</p>" : ""))
            </td>
        </tr>


        <tr>
            <td>@Html.DisplayNameFor(model => model.dataCadastro)</td>
            <td>@Html.DisplayFor(model => model.dataCadastro)</td>
        </tr>

    </tbody>

</table>


