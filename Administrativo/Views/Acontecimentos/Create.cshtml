@using Administrativo.Models
@model Acontecimentos

@{
    ViewBag.Title = "Cadastrar Acontecimentos";
    ViewBag.Icon = "fa ";
    ViewBag.SmallDescription = "Insere um acontecimento no sistema";
}

<div class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Cadastrar Acontecimentos</h3>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="box-body">

                    <div class="form-group">
                        @Html.LabelFor(model => model.EventoId, "Eventos")

                        @Html.DropDownList("EventoId", null, String.Empty, new { @class = "chosen-select" })
                        @Html.ValidationMessageFor(model => model.EventoId)
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Local)

                        @Html.EditorFor(model => model.Local)
                        @Html.ValidationMessageFor(model => model.Local)
                    </div>

                    <div class="form-group col-md-4" style="padding: 0 20px 0 0;">
                        @Html.LabelFor(model => model.Data)
                        <input type="datetime" id="Data" name="Data" class="form-control" value="@(Model != null ? Model.Data.ToString("dd/MM/yyyy") : string.Empty)" />
                        @Html.ValidationMessageFor(model => model.Data)
                    </div>

                    <div class="form-group col-md-4" style="padding: 0 20px 0 0;">
                        @Html.LabelFor(model => model.HoraInicio)

                        @Html.TextBoxFor(model => model.HoraInicio, new { @type = "time", @class = "text-box single-line" })
                        @Html.ValidationMessageFor(model => model.HoraInicio)
                    </div>
                    <div class="form-group col-md-4 no-padding">
                        @Html.LabelFor(model => model.HoraFim)
                        @Html.TextBoxFor(model => model.HoraFim, new { @type = "time", @class = "text-box single-line" })
                        @Html.ValidationMessageFor(model => model.HoraFim)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FlickrId)

                        @Html.EditorFor(model => model.FlickrId)
                        @Html.ValidationMessageFor(model => model.FlickrId)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Liberado)

                        @Html.BooleanFieldFor(model => model.Liberado, new { @class = "form-control", style = "width: 200px;" })
                        @Html.ValidationMessageFor(model => model.Liberado)
                    </div>

                </div>
                <div class="box-footer">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a href="@Url.Action("Index", "Acontecimentos", new { evento = ViewBag.Evento.Id })" class="btn btn-info">Voltar</a>

                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            $(".chosen-select").chosen({ width: "100%" });
            $('#Data').daterangepicker({
                format: 'DD/MM/YYYY',
                singleDatePicker: true
            });

        });
    </script>
}
