            var OcultarEnvio = function ()
            {
                $('.posts-data').hide();
            }

            var PostComment = function (user) {

                OcultarEnvio();

                user.noticiaId = idNoticia;

                if ($('.posts-comments li.selected')[0]) {
                    user.comentarioId = $('.posts-comments li.selected').data("id");
