@model Administrativo.Models.Categorias

@{
    ViewBag.Title = "Editar Categorias";
    ViewBag.Icon = "fa ";
    ViewBag.SmallDescription = "Altere as informações de Categorias";
}

<div class="content">
    <div class="row">
        <div class="box box-warning">
            <div class="box-header">
                <h3 class="box-title">Editar Categorias</h3>
            </div>
            @using (Html.BeginForm())
            {
                <div class="box-body">
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.EditoriaId)

                        @Html.DropDownList("EditoriaId", null, String.Empty, new { @class = "chosen-select" })
                        @Html.ValidationMessageFor(model => model.EditoriaId)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.destaque)

                        @Html.EditorFor(model => model.destaque)
                        @Html.ValidationMessageFor(model => model.destaque)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Titulo)

                        @Html.EditorFor(model => model.Titulo)
                        @Html.ValidationMessageFor(model => model.Titulo)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Ordem)

                        @Html.EditorFor(model => model.Ordem)
                        @Html.ValidationMessageFor(model => model.Ordem)
                    </div>

                </div>
                <div class="box-footer">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a href="@Url.Action("Index", "Categorias", new { editorial = Model.EditoriaId })" class="btn btn-info">Voltar</a>

                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script type="text/javascript">
        $(document).ready(function () {
            $(".chosen-select").chosen({ width: "100%" });

        });
    </script>
}
