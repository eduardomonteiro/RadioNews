            var verificaGostei = function (idComentario)
            {
                var retorno = false;

                var gosteiPagina = localStorage.getItem("gostei-" + idNoticia);
                if (gosteiPagina) {
                    $(gosteiPagina.split(',')).each(function ()
                    {
                        if (parseInt(this) == idComentario) {
                            retorno = true;
                        }
                    })
                }
                return retorno;
            }

            var verificaNaoGostei = function (idComentario)
            {
                var retorno = false;

                var naoGosteiPagina = localStorage.getItem("naogostei-" + idNoticia);
                if (naoGosteiPagina) {
                    $(naoGosteiPagina.split(',')).each(function ()
                    {
                        if (parseInt(this) == idComentario) {
