@model Administrativo.Models.Bastidores

@{
    ViewBag.Title = "Álbum";
    ViewBag.Icon = "fa ";
    ViewBag.SmallDescription = "Visualizar detalhes de álbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">Detalhes</h3>
            </div>
            <div class="box-content padded">
                <table class="table table-bordered table-striped responsive" >
                    <tbody>
						<tr>
                            <td style="width:200px;">@Html.DisplayNameFor(model => model.id)</td>
                            <td>@Html.DisplayFor(model => model.id)</td>
                        </tr>

						<tr>
                            <td>@Html.DisplayNameFor(model => model.titulo)</td>
                            <td>@Html.DisplayFor(model => model.titulo)</td>
                        </tr>

                        @*<tr>
                            <td>@Html.DisplayNameFor(model => model.chave)</td>
                            <td>@Html.DisplayFor(model => model.chave)</td>
                        </tr>*@

                        <tr>
                            <td>@Html.DisplayNameFor(model => model.ativo)</td>
                            <td>                            
                                @(Model.ativo ? "Sim" : "Não")
                            </td>
                        </tr>


						<tr>
                            <td>@Html.DisplayNameFor(model => model.chamada)</td>
                            <td>@Html.DisplayFor(model => model.chamada)</td>
                        </tr>

						@*<tr>
                            <td>@Html.DisplayNameFor(model => model.texto)</td>
                            <td>@Html.Raw(Model.texto)</td>
                        </tr>*@

						<tr>
                            <td>@Html.DisplayNameFor(model => model.dataCadastro)</td>
                            <td>@Html.DisplayFor(model => model.dataCadastro)</td>
                        </tr>

					</tbody>
                </table>
           </div>
		   <div class="box-footer">



		   					<a href="@Url.Action("Edit","Bastidor", new { id = Model.id })" class="btn btn-warning">Editar</a>
                <a href="@Url.Action("Index","Bastidor")" class="btn btn-info">Voltar</a>
								</p>


                

            </div>
        </div>

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Galeria</h3>
            </div>
            <div class="box-body">
                <form id="fileupload" action="@Url.Action("UploadFiles", "FotosBastidores")" method="POST" enctype="multipart/form-data">

                    <input type="hidden" id="galeria_id" name="galeria_id" value="@Model.id" />

                    <!-- The table listing the files available for upload/download -->
                    <table role="presentation" class="table table-striped">
                        <tbody class="files">
                            @foreach (var foto in ViewBag.fotos)
                            {
                                if (foto.video == false) { 
                                <tr class="template-download fade in">
                                    <td>
                                        <span class="preview">
                                            <a href="/admin/conteudo/bastidores/@Model.id/@foto.midia" title="@foto.midia" download="@foto.midia">
                                                <img src="/admin/conteudo/bastidores/@Model.id/min/@foto.midia" /></a>
                                        </span>
                                    </td>
                                    <td>
                                        <p class="name">
                                            <a href="/admin/conteudo/bastidores/@Model.id/@foto.midia" title="@foto.midia" download="@foto.midia">@foto.midia</a>
                                        </p>
                                    </td>
                                    <td>
                                        <span>@foto.legenda</span>
                                    </td>
                                </tr>
                                }
                                else
                                {
                                <tr class="template-download fade in">
                                    <td>
                                        <span class="preview">Video:</span>
</td>
                                    <td><span class="preview">
                                            @foto.midia
                                        </span></td>
                                    <td>
                                        <span>@foto.legenda</span>
                                    </td>
                                </tr>
                                }
                            }
                        </tbody>
                    </table>
                </form>
            </div>
        </div>


     </div>
    </div>
