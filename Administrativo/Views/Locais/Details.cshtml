@model Administrativo.Models.Secoes_Locais

@{
    ViewBag.Title = "Locais";
    ViewBag.Icon = "fa ";
    ViewBag.SmallDescription = "Visualizar detalhes de Locais";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">Detalhes</h3>
            </div>
            <div class="box-content padded">
                <table class="table table-bordered table-striped responsive">
                    <tbody>
                        <tr>
                            <td style="width:200px;">@Html.DisplayNameFor(model => model.Id)</td>
                            <td>@Html.DisplayFor(model => model.Id)</td>
                        </tr>

                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Especiais_Secoes.Titulo)</td>
                            <td>@Html.DisplayFor(model => model.Especiais_Secoes.Titulo)</td>
                        </tr>

                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Tipo)</td>
                            <td>@Html.DisplayFor(model => model.Tipo)</td>
                        </tr>

                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Titulo)</td>
                            <td>@Html.DisplayFor(model => model.Titulo)</td>
                        </tr>

                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Descricao)</td>
                            <td>@Html.Raw(Model.Descricao)</td>
                        </tr>

                        <tr>
                            <td>
                                Localização<br />
                                @Model.Endereco
                            </td>
                            <td>
                                <div id="mapa" style="height: 350px;"></div>

                            </td>
                        </tr>

                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Ativo)</td>
                            <td>@(Model.Ativo?"Sim":"Não")</td>
                        </tr>


                        <tr>
                            <td>@Html.DisplayNameFor(model => model.DataCadastro)</td>
                            <td>@Html.DisplayFor(model => model.DataCadastro)</td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <div class="box-footer">

                <a href="@Url.Action("Edit","Locais", new { id = Model.Id })" class="btn btn-warning">Editar</a>
                <a href="@Url.Action("Index","Locais", new {EspecialId = Model.Especiais_Secoes.EditoriaId })" class="btn btn-info">Voltar</a>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyDFo_E_biRDpDBkTRIUhE-oceoyIjH8MbI")
@section Scripts {
    <script src="~/Scripts/mapa.js"></script>
    <script>
        $(document).ready(function () {
            var markerMap = {
                latitude: '@Model.Latitude',
                longitude: '@Model.Longitude',
                draggable: false

            };
            Mapas.init(markerMap);
        });
    </script>

}