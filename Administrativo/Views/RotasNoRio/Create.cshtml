@model Administrativo.Models.RotasNoRio


	@{
		ViewBag.Title = "Cadastrar RotasNoRio";
		ViewBag.Icon = "fa ";
		ViewBag.SmallDescription = "Insere um RotasNoRio no sistema";
	
		Layout = "~/Views/Shared/_Layout.cshtml";
	
	}






<div class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Cadastrar RotasNoRio</h3>
            </div>
				@using (Html.BeginForm()) 
				{
					@Html.AntiForgeryToken()

				<div class="box-body">

	

						<div class="form-group">

								@Html.LabelFor(model => model.Titulo)

	

								@Html.EditorFor(model => model.Titulo)

								@Html.ValidationMessageFor(model => model.Titulo)
						</div>

	

						<div class="form-group">

								@Html.LabelFor(model => model.Status)

	

                            <select id="Status" name="Status" class="chosen-select">
                                <option value="">Selecione...</option>
                                <option value="Bom">Bom</option>
                                <option value="Regular">Regular</option>
                                <option value="Ruim">Ruim</option>
                            </select>

								@Html.ValidationMessageFor(model => model.Status)
						</div>

	

                    <div class="form-group" id="texto-group">
                        @Html.LabelFor(model => model.Texto)

                        @Html.EditorFor(model => model.Texto)
                        @Html.ValidationMessageFor(model => model.Texto)
                    </div>
	

				</div> 
                <div class="box-footer">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a href="@Url.Action("Index","Transporte")" class="btn btn-info">Voltar</a>

                </div>  
					}
		</div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $(document).ready(function () {
        $(".chosen-select").chosen({ width: "100%" });
        $('#Texto').wysihtml5();
        $('#Texto').css('height', '200');
        $('#texto-group').hide();
    });

    $('#Status').on('change', function () {
        if ($('#Status :selected').val() == 'Bom') {
            $('#texto-group').hide();
        } else {
            $('#texto-group').show();
        }
    });
</script>
}



