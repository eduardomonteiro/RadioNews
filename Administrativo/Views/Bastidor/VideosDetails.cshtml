@model Administrativo.Models.BastidoresMidias

@{
    ViewBag.Title = "Videos dos Bastidores";
    ViewBag.Icon = "fa ";
    ViewBag.SmallDescription = "Visualizar detalhes de Vídeos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">Detalhes</h3>
            </div>
            <div class="box-content padded">
                <table class="table table-bordered table-striped responsive">
                    <tbody>
                        <tr>
                            <td style="width:200px;">@Html.DisplayNameFor(model => model.id)</td>
                            <td>@Html.DisplayFor(model => model.id)</td>
                        </tr>

                        <tr>
                            <td>Título</td>
                            <td>@Html.DisplayFor(model => model.legenda)</td>
                        </tr>

                        <tr>
                            <td>Vídeo</td>
                            <td><iframe width="560" height="320" src="https://www.youtube.com/embed/@Model.midia" frameborder="0"></iframe></td>
                        </tr>
                        
                        <tr>
                            <td>Ativo</td>
                            <td>
                                @(Model.ativo ? "Sim" : "Não")
                            </td>
                        </tr>

                        <tr>
                            <td>Data de Cadastro</td>
                            <td>@Html.DisplayFor(model => model.dataCadastro)</td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <div class="box-footer">
                <a href="@Url.Action("VideosEdit","Bastidor", new { id = Model.id })" class="btn btn-warning">Editar</a>
                <a href="@Url.Action("Videos","Bastidor")" class="btn btn-info">Voltar</a>
            </div>
        </div>
    </div>
</div>

