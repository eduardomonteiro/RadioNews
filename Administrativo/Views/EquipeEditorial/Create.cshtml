@model Administrativo.Models.Editoriais_Equipe

@{
    ViewBag.Title = "Cadastrar EquipeEditorial";
    ViewBag.Icon = "fa ";
    ViewBag.SmallDescription = "Insere um EquipeEditorial no sistema";
}



<div class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Cadastrar EquipeEditorial</h3>
            </div>
            @using (Html.BeginForm("Create", "EquipeEditorial", new { editorial = ViewBag.editorial.id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="box-body">

                    <div class="form-group">
                        @Html.LabelFor(model => model.EditoriaisId, "Editoriais")

                        @Html.DropDownList("EditoriaisId", null,String.Empty, new { @class = "chosen-select" })
                        @Html.ValidationMessageFor(model => model.EditoriaisId)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.nome)

                        @Html.EditorFor(model => model.nome)
                        @Html.ValidationMessageFor(model => model.nome)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.texto)

                        @Html.TextAreaFor(model => model.texto)
                        @Html.ValidationMessageFor(model => model.texto)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.funcao)

                        @Html.EditorFor(model => model.funcao)
                        @Html.ValidationMessageFor(model => model.funcao)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.imagem)

                        <input type="file" name="imagem" id="imagem" />
                        @Html.ValidationMessageFor(model => model.imagem)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.imagemVertical)
                        <input type="file" name="imagemVertical" id="imagemVertical" />
                        @Html.ValidationMessageFor(model => model.imagemVertical)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.instagram)

                        @Html.EditorFor(model => model.instagram)
                        @Html.ValidationMessageFor(model => model.instagram)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.facebook)

                        @Html.EditorFor(model => model.facebook)
                        @Html.ValidationMessageFor(model => model.facebook)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.twitter)

                        @Html.EditorFor(model => model.twitter)
                        @Html.ValidationMessageFor(model => model.twitter)
                    </div>

                </div>
                <div class="box-footer">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a href="@Url.Action("Index", "EquipeEditorial")" class="btn btn-info">Voltar</a>

                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            $(".chosen-select").chosen({ width: "100%" });

            var editor = CKEDITOR.replace('texto',
                {
                    height: "200px"
                });
        });
    </script>
}
